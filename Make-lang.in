# Variables

# The name of the NEIS compiler.
NEIS_EXE = neis1$(exeext)
# The NEIS-specific object files inclued in $(NEIS_EXE).
NEIS_OBJS = neis/neis.tab.o neis/neis-lang.o

# Rules

# These hooks are used by the main GCC Makefile.  Consult that
# Makefile for documentation.
neis.all.cross: $(NEIS_EXE)
neis.start.encap: $(NEIS_EXE)
neis.rest.encap:
neis.tags:
neis.install-common:
neis.install-man:
neis.install-info:
neis.dvi:
neis.pdf:
neis.install-pdf:
neis.html:
neis.install-html:
neis.uninstall:
neis.info:
neis.man:
neis.srcextra:
neis.srcman:
neis.srcinfo:
neis.install-plugin:

neis.mostlyclean:
	rm -f $(NEIS_OBJS) $(NEIS_EXE)

neis.clean:
neis.distclean:
neis.maintainer-clean:
neis.stage1:
neis.stage2:
neis.stage3:
neis.stage4:
neis.stageprofile:
neis.stagefeedback:

# NEIS rules.

# Use strict warnings for this front end.
neis-warn = $(STRICT_WARN)

$(NEIS_EXE): $(NEIS_OBJS) $(BACKEND) $(LIBDEPS)
	+$(LLINKER) $(ALL_LINKERFLAGS) $(LDFLAGS) -o $@ \
		$(NEIS_OBJS) -lfl $(BACKEND) $(BACKENDLIBS) $(LIBS)

# NEIS testing is done as part of C/C++/Fortran etc. testing.
check-neis:
